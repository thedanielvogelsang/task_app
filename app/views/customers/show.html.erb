<h1><%= @customer.name %></h1>
<br>
<button type='button' onclick="window.location.href='/projects'" class='btn btn-primary'>Back to Dash</button>
<hr>
<%= content_tag :div, class: 'container' do %>
  <% if flash[:notice] %>
    <p class='notice'><%= flash[:notice] %></p>
  <% end %>
  <h3>Change customer name:</h3>
  <%= form_for @customer, class: 'col-md-7 mx-auto my-5 customer-name-form' do %>
    <%= label_tag(:name, 'New Name', class: 'login-label') %>
    <%= text_field_tag(:name, "", class:'login-input' )%><br/>
    <%= submit_tag "Submit", class: 'btn btn-secondary' %>
  <% end %>
  <% if admin_privs? %>
    <button type='button' class='btn btn-danger' onclick="deleteCustomer(<%= @customer.id %>)" >Delete Customer</button>
  <% end %>
<% end %>
