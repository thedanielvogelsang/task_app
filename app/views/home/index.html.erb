<%= content_tag :div, class:'homepage-image' do %>
  <% if logged_in? %>
      <button type='submit' id='dash-btn' class='btn btn-primary dash-btn' onclick="window.location.href='/dashboard'">Go To Projects</button>
  <% else %>
    <% content_tag :div, class: 'homepage-container p-3 p-md-5 m-md-3 text-center' do %>
      <% content_tag :div, class: 'col-md-7 p-lg-5 mx-auto my-5' do %>
        <%= content_tag :div, id: 'flash', class: 'flash-div' do %>
          <% if flash[:message] %>
            <p class='notice'><%= flash[:message] %></p>
          <% end %>
        <% end %>
        <h1 class='homepage-title display-4'> Welcome to TaskApp! </h1>
        <%= content_tag :p, 'Hello! And welcome to Task App, your portal for logging those busy work hours.', class: 'homepage-welcome-text' %>
        <button type='submit' id='login-btn' class='btn btn-primary login-btn' onclick='openModal()'>Login</button>
        <%= content_tag :div, class: 'container-sm login-modal' do %>
          <%= form_tag '/login', id: 'login-form', class: 'login-form invisible' do %>
            <%= label_tag(:email, 'Email', class: 'login-label') %>
            <%= text_field_tag(:email, "", class:'login-input' )%><br/>
            <%= label_tag(:password, 'Password', class: 'login-label') %>
            <%= password_field_tag(:password, '', class: 'login-input') %>
            <%= submit_tag "Submit", class: 'btn btn-secondary login-submit' %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
